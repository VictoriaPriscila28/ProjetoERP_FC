procedure TfrmPrincipal.btnProdutosClick(Sender: TObject);
begin
  frmProdutos := TfrmProdutos.Create(Self);  // Cria na memória
  frmProdutos.ShowModal;                          // Mostra o formulário de forma não modal
  frmProdutos.Release;                       // Agenda a liberação
end;


procedure TfrmPrincipal.btnSairClick(Sender: TObject);
begin
Close;
end;

procedure TfrmPrincipal.btnVendasClick(Sender: TObject);
begin
  frmVendas := TfrmVendas.Create(Self);  // Cria na memória
  frmVendas.ShowModal;                          // Mostra o formulário de forma não modal
  frmVendas.Release;                       // Agenda a liberação
end;

procedure TfrmPrincipal.btnPedidosClick(Sender: TObject);
begin
  frmPedidos := TfrmPedidos.Create(Self);  // Cria na memória
  frmPedidos.ShowModal;                          // Mostra o formulário de forma não modal
  frmPedidos.Release;                       // Agenda a liberação
end;

procedure TfrmPrincipal.Timer1Timer(Sender: TObject);
begin
  StatusBar1.Panels[0].Text:=DateTostr(now);
  StatusBar1.Panels[1].Text:=TimeTostr(now);
  StatusBar1.Panels[2].Text:='Bem vindo ao sistema!';
end;

end.
